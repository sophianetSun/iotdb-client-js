{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["esnext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Paths
    "paths": {
      "@iotdb/common": ["./codegen/org/apache/iotdb/common/rpc/thrift/"],
      "@iotdb/datanode": ["./codegen/org/apache/iotdb/mpp/rpc/thrift/"],
      "@iotdb/client": ["./codegen/org/apache/iotdb/service/rpc/thrift/"],
    },
  }
}
